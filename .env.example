# ───────── App ─────────
APP_NAME=AI-Text-API
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=Asia/Seoul

# ───────── Logging ─────────
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ───────── Database (Docker: service=db) ─────────
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=ai_text_api
DB_USERNAME=ai
DB_PASSWORD=ai
# (로컬 네이티브로 돌릴 땐 HOST만 바꾸세요)
# DB_HOST=127.0.0.1

# ───────── Session/Cache/Queue ─────────
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
CACHE_STORE=file
CACHE_DRIVER=file
# (지금 Redis 안 쓰면 위 값 그대로 OK)

# ───────── Redis (옵션: 나중에 쓸 때만) ─────────
# REDIS_CLIENT=phpredis
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ───────── LLM 스위치 & 설정 ─────────
LLM_DUMMY=true
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=15
RATE_PER_MIN=60

# (선택) 429/5xx 백오프 파라미터
LLM_RETRIES=3
LLM_RETRY_BASE_MS=500
# (선택) 429시 더미 자동 폴백
LLM_FALLBACK_DUMMY_ON_429=false
